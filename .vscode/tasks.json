{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open as HTML File in Chrome",
            "type": "process",
            "command": "shell",
            "windows": {
                "command": "C:/Program Files (x86)/Google/Chrome/Application/chrome.exe"
            },
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always", // 是否將任務開啟的 terminal 顯示到前台
                "focus": true, // 是否將鼠標定位到該 terminal 上
                "panel": "shared" // tasks 是否共用 terminal
            }
        }
    ]
}